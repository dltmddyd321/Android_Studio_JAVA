<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="400dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <ImageButton
                    android:id="@+id/ibtn1"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="20dp"
                    app:srcCompat="@drawable/you1"></ImageButton>

                <ImageButton
                    android:layout_width="194dp"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/you2"></ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"

                    android:text="          핏더사이즈"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:text="      깡스타일리스트"
                    android:textSize="20dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <ImageButton
                    android:layout_width="181dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="20dp"
                    app:srcCompat="@drawable/you3"></ImageButton>

                <ImageButton
                    android:id="@+id/ibtn2"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="20dp"
                    app:srcCompat="@drawable/you4"></ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="             쩡대TV"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:text="             짱구대디"
                    android:textSize="20dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <ImageButton
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="20dp"
                    app:srcCompat="@drawable/you5"></ImageButton>

                <ImageButton
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/you6"></ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"

                    android:text="        코디메이커피로"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:text="                  호수"
                    android:textSize="20dp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>